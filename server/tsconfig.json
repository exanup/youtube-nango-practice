{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2022",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
